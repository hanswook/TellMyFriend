        android:theme="@style/AppTheme">

        <meta-data
            android:name="BASE_URL"
            android:value="http://106.12.72.67:8502/" />

        <activity android:name=".ui.activity.UpdateFriendActivity"></activity>
        <activity android:name=".ui.activity.AddFriendActivity" />
        <activity android:name=".ui.activity.FriendListActivity" />
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>