<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="titleMargin">0dp</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <!--该行代码就是设置AlertDialog的背景-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置window背景透明，也就是去边框-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/base_anim_enter_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/base_anim_exit_bottom</item>
        <!-- 指定消失的动画xml -->
    </style>


    <declare-styleable name="SignKeyWordTextView">
        <attr name="signText" format="string"/>
        <attr name="signTextColor" format="color"/>
    </declare-styleable>
</resources>